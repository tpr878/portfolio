{
    "version": 2,
    "builds": [
        {
            "src": "portfolio_agent/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.11"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "portfolio_agent/wsgi.py"
        }
    ]
}